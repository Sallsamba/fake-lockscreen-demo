{
  "name": "fake-lockscreen-demo",
  "version": "1.0.0",
  "description": "Cybersecurity education tool demonstrating fake Windows lock screen vulnerabilities",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-all": "electron-builder --win --mac --linux"
  },
  "keywords": [
    "cybersecurity",
    "education",
    "phishing",
    "social-engineering",
    "electron"
  ],
  "author": "Cybersecurity Education",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/fake-lockscreen-demo.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "com.cybersecurity.fakelockscreen",
    "productName": "Ã‰cran de verrouillage Windows",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "style.css",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
